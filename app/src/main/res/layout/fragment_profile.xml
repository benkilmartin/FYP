<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfilePicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/editImageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Click image to edit"
            android:textAlignment="center"
            android:textStyle="italic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/eventTimeTV"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button1"
            android:text="Save"
            android:visibility="gone"></androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/UsernameTV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_textbox"
            android:minHeight="50dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textColorHint="#F6F6F6"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/EmailTV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_textbox"
            android:gravity="center_horizontal"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#F6F6F6"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sbookBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_below="@id/eventTimeTV"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button1"
                android:text="Saved Books"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/flistBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/eventTimeTV"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button1"
                android:text="Find Friends"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kfriendlistBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_below="@id/eventTimeTV"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button1"
                android:text="Friend List"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kgoallistBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:layout_below="@id/eventTimeTV"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button1"
                android:text="Goal List"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>